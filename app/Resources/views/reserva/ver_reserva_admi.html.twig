{% extends 'base/baseFoto2.html.twig' %}

{% block title %} Impresion Factura {% endblock %}

{% block navbar %}
{{include('base/menu_general.html.twig')}}
{% endblock %}

{% block content %}
<script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/0.9.0rc1/jspdf.min.js"></script>
<div class="container">
 <div class="card">
 	<div class="card-header">
 		<h2>FACTURA COMERCIAL</h2>
  		<p>DETALLE DE PEDIDO</p> 
 	</div>
 </div>
 <div class="card bg-light text-dark">
 	<div class="card-body">
 <table class="table table-dark">
  	 <thead>
  	 	<tr>
  	 		<th>Fecha:</th>
  	 		<th>{{reserva.reservaFecha| date('d/m/y H:i:s')}}</th>
  	 		<th>Cliente:</th>
  	 		<th>{{reserva.idUsuario}}</th>
  	 	</tr>
  	 </thead>
  </table>           
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Tipo Reserva</th>
        <th>Precio</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{reserva.reservaTipoId}}</td>
        <td>{{tipoReserva.precio}}</td>
        <td>{{tipoReserva.precio}}</td>
      </tr>
    </tbody>
  </table> 		
 	</div>
 </div>
<button id="cmd" class="btn btn-success">Impresion de Factura</button>
</div>
<script type="text/javascript">
var doc = new jsPDF();
var specialElementHandlers = {
    '#editor': function (element, renderer) {
        return true;
    }
};

$('#cmd').click(function () {   
    doc.fromHTML($('#content').html(), 15, 15, {
        'width': 170,
            'elementHandlers': specialElementHandlers
    });
    doc.save('FacturaVenta.pdf');
});
</script>

