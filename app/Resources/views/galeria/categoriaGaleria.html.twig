{% extends 'base/baseGaleria.html.twig' %}


{% block title %}Galeria{% endblock %}

{% block navbar %}
{{include('base/menu_general_cliente.html.twig')}}
{% endblock %}

{% block content %}



<div class="container gallery-container">

    <h1>Galer√≠a de Fotos</h1>

    <p class="page-description text-center">Una muestra sobre la calidad del trabajo</p>

    <div class="tz-gallery">

        <div class="row">
          {% for foto in listado %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <a class="lightbox" href="{{ asset('uploads/images/' ~ foto.fotoLink)}}">
                        <img src="{{ asset('uploads/images/' ~ foto.fotoLink)}}">
                    </a>
                    <div class="caption">
                        <h3>{{foto.titulo}}</h3>
                        <p>{{foto.fotoDescripcion}}</p>
                    </div>
                </div>
            </div>
            {% endfor %}



        </div>
    </div>

</div>

{% endblock %}
